<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gema_king" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- 沒有標題欄的主題 -->
    <style name="Theme.Gema_king.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- 設置狀態欄和導航欄為透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- 基礎應用主題 -->
    <style name="Theme.GameKing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <!-- Popup/Menu colors -->
        <item name="android:itemTextAppearance">@style/PopupMenuTextAppearance</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <!-- 輸入框樣式 -->
    <style name="Widget.GameKing.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="endIconTint">@color/text_primary</item>
        <item name="startIconTint">@color/text_primary</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <!-- 密碼輸入框樣式 -->
    <style name="Widget.GameKing.TextInputLayout.Password" parent="Widget.GameKing.TextInputLayout">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/text_primary</item>
    </style>

    <!-- 輸入框文字樣式 -->
    <style name="Widget.GameKing.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- 按鈕樣式 -->
    <style name="Widget.GameKing.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 取消按鈕樣式 -->
    <style name="Widget.GameKing.Button.Secondary" parent="Widget.GameKing.Button">
        <item name="backgroundTint">@color/button_cancel</item>
    </style>

    <!-- 文字按鈕樣式 -->
    <style name="Widget.GameKing.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="rippleColor">@color/scrim</item>
    </style>

    <!-- 標題文字樣式 -->
    <style name="TextAppearance.GameKing.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 對話框樣式 -->
    <style name="ThemeOverlay.GameKing.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@color/dialog_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- 設置對話框樣式 -->
    <style name="ThemeOverlay.GameKing.Dialog.Settings" parent="ThemeOverlay.GameKing.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- 深色動作欄主題覆蓋 -->
    <style name="ThemeOverlay.GameKing.DarkActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="actionBarStyle">@style/Widget.GameKing.ActionBar</item>
    </style>

    <!-- 動作欄樣式 -->
    <style name="Widget.GameKing.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/primary</item>
        <item name="elevation">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextStyle">@style/TextAppearance.GameKing.ActionBar.Title</item>
        <item name="subtitleTextStyle">@style/TextAppearance.GameKing.ActionBar.Subtitle</item>
        <item name="actionMenuTextColor">@color/text_primary</item>
        <item name="iconTint">@color/text_primary</item>
    </style>

    <!-- 動作欄標題文字樣式 -->
    <style name="TextAppearance.GameKing.ActionBar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- 動作欄副標題文字樣式 -->
    <style name="TextAppearance.GameKing.ActionBar.Subtitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- 溢出選單樣式 -->
    <style name="OverflowMenuStyle" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/background</item>
    </style>

    <style name="PopupMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/background</item>
    </style>
</resources>